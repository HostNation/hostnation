{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "es2017"],
    "module": "commonjs",

    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmit": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": false,
    "downlevelIteration": true
  },
  "include": ["./src/**/*", "./typings.d.ts"]
}
